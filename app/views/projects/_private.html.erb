</div> <!-- main wrapper end -->


<div class="add-note-area">

<div class="hidden-section note-area">
<%= form_for([@project, @project.notes.build], :html => {:multipart => true, :class => "hidden-section note-area"}) do |f| %>
    <div class="add-note-text-field">
    <%= f.text_area :name, :size => "57x2", placeholder: "Add new note here" %>
    </div>
  
  <div class="add-note-img-field"><%= f.file_field :image %></div>
  
  <div class="add-note-button-bk"><%= f.submit 'Add Note', :class => 'note-submit-btn'%></div>
<% end %>
</div>

<div class="hidden-section prototype-area">
<%= form_for([@project, @project.prototypes.build], :html => {:multipart => true}) do |f| %>
