<div class="main-wrapper">

<div class="project-header">
  <%= best_in_place @project, :name, {:inner_class => "input-project-header", :type => :input} %>
</div>
<div class="project-detail">
  <p><%= best_in_place @project, :detail %></p>
</div>

<div id="note-section" class="note-area hidden-section">
<div id="masonry-container" class="transitions-enabled infinite-scroll clearfix notes-content-wrapper">

<% for notes in @project.notes %>
<div class="note-box">
  <div class="note-name">
  <%= best_in_place notes, :name, :path => project_note_path(@project, notes) %>
  </div>
    <% if notes.image_url.blank? %>
<% else %>
<div class="note-image">
      <%= link_to image_tag(notes.image_url(:thumb).to_s), notes.image_url %>
  </div>
<% end %>
  <div class="note-edit-link">
  	<%= link_to 'Destroy', project_note_path(@project, notes),
              :confirm => 'Are you sure?', :method => :delete %>
  </div>
</div> <!--note box end -->
<% end %>
</div> <!-- notes content wrapper end -->
</div> <!-- end note section container -->

